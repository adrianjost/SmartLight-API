{
	"name": "smartlight-api",
	"author": "Adrian Jost",
	"version": "3.0.0",
	"license": "MIT",
	"description": "SmartLight V3 API Cloud Functions",
	"engines": {
		"node": "10"
	},
	"scripts": {
		"deploy:api": "firebase deploy --only functions:api",
		"deploy": "run-s deploy:*",
		"lint:ci:eslint": "eslint .",
		"lint:ci:prettier": "prettier -c \"**/*.{js,json,md}\"",
		"lint:ci": "run-s lint:ci:*",
		"lint:fix:eslint": "eslint . --fix",
		"lint:fix:prettier": "prettier --write -c \"**/*.{js,json,md}\"",
		"lint:fix": "run-s lint:fix:*",
		"lint": "npm run lint:fix",
		"serve": "firebase serve --only functions",
		"shell": "firebase experimental:functions:shell",
		"test:watch": "npm run test --watchAll",
		"test:ci": "jest --collect-coverage && npx codecov",
		"test": "jest"
	},
	"dependencies": {
		"camelcase": "^6.2.0",
		"color": "^3.1.3",
		"color-name-list": "^7.31.0",
		"firebase-admin": "^9.5.0",
		"firebase-functions": "^3.13.1",
		"glob": "^7.1.6",
		"restana": "^4.8.1"
	},
	"devDependencies": {
		"eslint": "^7.20.0",
		"eslint-plugin-jest": "^24.1.3",
		"eslint-plugin-promise": "^4.3.1",
		"firebase-tools": "^9.3.0",
		"husky": "^5.0.9",
		"jest": "^26.6.3",
		"lint-staged": "^10.5.4",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.2.1"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,json,md}": [
			"prettier --write",
			"git add"
		],
		"*.js": [
			"eslint --fix",
			"git add"
		]
	}
}
