{
	"name": "smartlight-api",
	"author": "Adrian Jost",
	"version": "3.0.0",
	"license": "MIT",
	"description": "SmartLight V3 API Cloud Functions",
	"engines": {
		"node": "10"
	},
	"scripts": {
		"deploy:api": "firebase deploy --only functions:api",
		"deploy": "run-s deploy:*",
		"lint:ci:eslint": "eslint .",
		"lint:ci:prettier": "prettier -c \"**/*.{js,json,md}\"",
		"lint:ci": "run-s lint:ci:*",
		"lint:fix:eslint": "eslint . --fix",
		"lint:fix:prettier": "prettier --write -c \"**/*.{js,json,md}\"",
		"lint:fix": "run-s lint:fix:*",
		"lint": "yarn lint:fix",
		"serve": "firebase serve --only functions",
		"shell": "firebase experimental:functions:shell",
		"test:watch": "yarn test --watchAll",
		"test:ci": "jest --collect-coverage && npx codecov",
		"test": "jest"
	},
	"dependencies": {
		"camelcase": "^6.0.0",
		"color": "^3.1.2",
		"color-name-list": "^5.0.0",
		"firebase-admin": "^8.9.0",
		"firebase-functions": "^3.3.0",
		"glob": "^7.1.6",
		"restana": "^4.0.3"
	},
	"devDependencies": {
		"@schul-cloud/eslint-config": "^0.3.1",
		"eslint": "^6.8.0",
		"eslint-plugin-promise": "^4.2.1",
		"husky": "^4.0.10",
		"jest": "^24.9.0",
		"lint-staged": "^10.0.0-beta.15",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.0.5"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,json,md}": [
			"prettier --write",
			"git add"
		],
		"*.js": [
			"eslint --fix",
			"git add"
		]
	}
}
