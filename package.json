{
	"name": "functions",
	"author": "Adrian Jost",
	"version": "3.0.0",
	"license": "MIT",
	"description": "SmartLight V3 Cloud Functions",
	"engines": {
		"node": "10"
	},
	"scripts": {
		"lint": "run-s lint:*",
		"lint:eslint": "eslint . --fix",
		"lint:prettier": "prettier --write -c \"**/*.{js,json,md}\"",
		"serve": "firebase serve --only functions",
		"shell": "firebase experimental:functions:shell",
		"deploy:iftttSpeach": "firebase deploy --only functions:iftttSpeach",
		"deploy:populateGroupState": "firebase deploy --only functions:populateGroupState",
		"deploy": "run-s deploy:*",
		"setup": "yarn && cd functions && yarn"
	},
	"dependencies": {},
	"devDependencies": {
		"eslint": "^6.8.0",
		"eslint-plugin-promise": "^4.2.1",
		"npm-run-all": "^4.1.5",
		"prettier": "^1.19.1",
		"yorkie": "^2.0.0"
	}
}
